{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "lib": ["esnext", "webworker"],
    "types": ["@cloudflare/workers-types", "@types/jest", "node"],
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
